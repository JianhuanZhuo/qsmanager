        <Pane HBox.hgrow="ALWAYS"/>
    </HBox>
    <TableView fx:id="table_static" prefHeight="288.0" prefWidth="590.0">
        <columns>
            <TableColumn prefWidth="75.0" text="月份"/>
            <TableColumn prefWidth="75.0" text="总工资"/>
            <TableColumn prefWidth="75.0" text="实发工资"/>
            <TableColumn prefWidth="75.0" text="未发工资"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
    <HBox styleClass="hbox-common">
        <Label text="总工资合计：￥"/>
        <Label text="223,233.21"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Label text="已发合计：￥"/>
        <Label text="100,000.00"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Label text="未发合计：￥"/>
        <Label text="123,233.21"/>
        <Pane HBox.hgrow="ALWAYS"/>
    </HBox>

    <Separator/>
    <HBox styleClass="title-line">
        <Label text="应付工资总表"/>
        <Pane HBox.hgrow="ALWAYS"/>
    </HBox>
    <TableView prefHeight="288.0" prefWidth="590.0">
        <columns>
            <TableColumn prefWidth="75.0" text="姓名"/>
            <TableColumn prefWidth="75.0" text="总工资"/>
            <TableColumn prefWidth="75.0" text="应付总额"/>
        </columns>
    </TableView>
    <HBox layoutY="343.0">
        <Label text="应付合计：￥"/>
        <Label text="123,233.21"/>
        <styleClass>
            <String fx:value="hbox-common"/>
            <String fx:value="right-align"/>
        </styleClass>
    </HBox>
    <styleClass>
        <String fx:value="content-pane"/>
        <String fx:value="vbox-common"/>
    </styleClass>
</VBox>
