    </TableView>
    <HBox styleClass="hbox-common">
        <children>
            <Label text="总工资合计：￥"/>
            <Label layoutX="15.0" layoutY="15.0" text="223,233.21"/>
            <Pane HBox.hgrow="ALWAYS"/>
