    <HBox layoutX="15.0" layoutY="343.0">
        <children>
            <Label layoutX="450.0" layoutY="15.0" text="应付合计：￥"/>
            <Label layoutX="527.0" layoutY="15.0" text="123,233.21"/>
        </children>
        <styleClass>
            <String fx:value="hbox-common"/>
            <String fx:value="right-align"/>
        </styleClass>
    </HBox>
    <styleClass>
        <String fx:value="content-pane"/>
        <String fx:value="vbox-common"/>
    </styleClass>
