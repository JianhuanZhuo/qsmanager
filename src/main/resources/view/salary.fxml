            <Label layoutX="104.0" layoutY="15.0" text="100,000.00"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Label layoutX="450.0" layoutY="15.0" text="未发合计：￥"/>
            <Label layoutX="527.0" layoutY="15.0" text="123,233.21"/>
            <Pane layoutX="595.0" layoutY="15.0" HBox.hgrow="ALWAYS"/>
        </children>
