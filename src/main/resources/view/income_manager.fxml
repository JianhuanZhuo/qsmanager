<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>

<HBox fx:id="root" alignment="CENTER" styleClass="content-pane" stylesheets="@css/common.css"
      xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="cn.keepfight.qsmanager.controller.IncomeManagerController">
    <Pane HBox.hgrow="ALWAYS"/>
    <Button fx:id="orderBtn" contentDisplay="TOP" styleClass="btn-common" text="账单列表">
        <graphic>
            <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@img/income_list.png"/>
            </ImageView>
        </graphic>
    </Button>
    <Pane HBox.hgrow="ALWAYS"/>
    <Button fx:id="annuBtn" contentDisplay="TOP" styleClass="btn-common" text="年度对账表">
        <graphic>
            <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@img/income_confirm.png"/>
            </ImageView>
        </graphic>
    </Button>
    <Pane HBox.hgrow="ALWAYS"/>
    <Button fx:id="predBtn" contentDisplay="TOP" styleClass="btn-common" text="收入预算表">
        <graphic>
            <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@img/income_predict.png"/>
            </ImageView>
        </graphic>
    </Button>
    <Pane HBox.hgrow="ALWAYS"/>
</HBox>
