<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>
<VBox fx:id="root" styleClass="content-pane,title-pane"
      stylesheets="@css/common.css"
      xmlns="http://javafx.com/javafx/8.0.111"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="cn.keepfight.qsmanager.controller.IncomeAnnualController">
    <HBox styleClass="hbox-common">
        <ChoiceBox fx:id="an_cust_sel" prefWidth="130.0"/>
        <ChoiceBox fx:id="an_year_sel" prefWidth="80.0"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button text="打印年对账表" fx:id="an_print">
            <graphic>
                <ImageView styleClass="image-button">
                    <Image url="@img/print.png"/>
                </ImageView>
            </graphic>
        </Button>
    </HBox>
    <ScrollPane fitToHeight="true" fitToWidth="true">
        <TableView fx:id="anTable">
            <columns>
                <TableColumn fx:id="mon" text="日期"/>
                <TableColumn fx:id="total" text="金额"/>
                <TableColumn fx:id="billunit" text="开票单位"/>
                <TableColumn fx:id="billdate" text="开票日期"/>
                <TableColumn fx:id="billtotal" text="开票金额"/>
                <TableColumn fx:id="rate" text="税率"/>
                <TableColumn fx:id="ratetotal" text="税金"/>
                <TableColumn fx:id="remitunit" text="汇款单位"/>
                <TableColumn fx:id="pattern" text="汇款方式"/>
                <TableColumn fx:id="remitdate" text="汇款日期"/>
                <TableColumn fx:id="paytotal" text="本月付款金额"/>
                <TableColumn fx:id="note" text="备注"/>
            </columns>
        </TableView>
    </ScrollPane>
    <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <styleClass>
            <String fx:value="report-bottom"/>
        </styleClass>
        <GridPane styleClass="infogp">
            <Label text="年前结余金额：￥"/>
            <Label text="年度金额合计：￥" GridPane.rowIndex="1"/>
            <Label text="年度税金合计：￥" GridPane.rowIndex="2"/>
            <Label text="年度付款合计：￥" GridPane.rowIndex="3"/>
            <Label text="实际应付合计：￥" GridPane.rowIndex="4"/>
            <Label fx:id="an_count_bf" text="0" GridPane.columnIndex="1"/>
            <Label fx:id="an_total_annu" text="0" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
            <Label fx:id="an_total_rate" text="0" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <Label fx:id="an_total_pay" text="0" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            <Label fx:id="an_total_actu" text="0" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT"/>
                <ColumnConstraints/>
            </columnConstraints>
        </GridPane>
        <Pane HBox.hgrow="ALWAYS"/>
        <Label fx:id="attach" styleClass="attach-icon" text="附件">
            <graphic>
                <ImageView>
                    <Image url="@img/attachment.png"/>
                </ImageView>
            </graphic>
        </Label>
    </HBox>
</VBox>
