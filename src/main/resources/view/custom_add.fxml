<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox stylesheets="@css/common.css" styleClass="title-pane"
      xmlns="http://javafx.com/javafx/8.0.111"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:id="root"
      fx:controller="cn.keepfight.qsmanager.controller.CustomAddController">

    <HBox alignment="CENTER_LEFT" styleClass="title-line">
        <Label text="新增客户信息"/>
        <Pane HBox.hgrow="ALWAYS"/>
    </HBox>
    <GridPane styleClass="infogp">
        <Label text="客户简称：" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Label text="客户编号：" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <Label text="客户账号：" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <Label text="客户密码：" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="name" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        <TextField fx:id="item" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <TextField fx:id="acc" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <TextField fx:id="psw" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    </GridPane>
</VBox>
