<VBox fx:id="root" styleClass="content-pane, vbox-common" stylesheets="@css/common.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cn.keepfight.qsmanager.controller.SalaryMonthController">
