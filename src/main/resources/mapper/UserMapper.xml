<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.keepfight.qsmanager.model.UserMapper">
    <select id="selectUserByID" parameterType="int" resultType="User">
        SELECT *
        FROM `user`
        WHERE id = #{id}
    </select>

    <insert id="insertUser" parameterType="User">
        INSERT INTO user(utype,acc,psw,relateid) VALUES(#{utype}, #{acc}, #{psw}, #{relateID})
        <selectKey keyProperty="id" order="AFTER" resultType="int">
            SELECT last_insert_rowid();
        </selectKey>
    </insert>

    <select id="checkLegality" resultType="User" parameterType="User">
        SELECT
            id,
            utype,
            acc,
            psw,
            relateid
        FROM user
        WHERE acc = '${acc}' AND psw = '${psw}'
    </select>
</mapper>